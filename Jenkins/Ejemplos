pipeline
{
    agent any
    stages
    {
        stage ("Crear fichero")
        {
            steps
            {
                script
                {
                    def fecha = new Date()
                    def info ="Hola manola! " + fecha
                    writeFile(file: "salida_file.txt", text:info)
                }
            }
        }
    }
}


